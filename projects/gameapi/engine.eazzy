function up()
set /A selectedy-=1
set tmp2=q
call set tmp1=q%%%tmp2%%selectedx%%selectedy%%%
if %tmp1%==q1 (
set /a selectedy+=1
exit /b
)
if %selectedy%==0 (
set /a selectedy=%maxy%-1
exit /b
)
end
function down()
set /A selectedy+=1
call set tmp1=q%%q%selectedx%%selectedy%%%
set /a tmp=%maxy%
if %tmp1%==q1 (
set /a selectedy-=1
exit /b
)
if %selectedy%==%tmp% (
set selectedy=1
exit /b
)
end
function right()
set /a selectedx+=1
set tmp2=q
call set tmp1=q%%%tmp2%%selectedx%%selectedy%%%
if %tmp1%==q1 (
set /a selectedx-=1
exit /b
)
set tmp=%maxx%
if %selectedx%==%tmp% (
set /a selectedx=1
exit /b
)
end
function left()
set /a selectedx-=1
set tmp2=q
call set tmp1=q%%%tmp2%%selectedx%%selectedy%%%
if %tmp1%==q1 (
set /a selectedx+=1
exit /b
)
if %selectedx%==0 (
set /a selectedx=%maxx%-1
exit /b
)
end
